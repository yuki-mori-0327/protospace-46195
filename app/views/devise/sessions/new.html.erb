<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

  <%= form_with model: User.new, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, id: "user_email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（6文字以上）" %><br />
    <%= f.password_field :password, id: "user_password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン情報を保存する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: :form__btn %>
  </div>
<% end %>
    </div>
  </div>
</div>